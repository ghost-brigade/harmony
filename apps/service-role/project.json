{
  "name": "service-role",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/service-role/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/service-role",
        "main": "apps/service-role/src/main.ts",
        "tsConfig": "apps/service-role/tsconfig.app.json",
        "assets": ["apps/service-role/src/assets"],
        "isolatedConfig": true,
        "webpackConfig": "apps/service-role/webpack.config.js",
        "generatePackageJson": true
      },
      "configurations": {
        "development": {},
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "service-role:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "service-role:build:development"
        },
        "production": {
          "buildTarget": "service-role:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/service-role/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/service-role/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "container": {
      "dependsOn": ["build"],
      "executor": "@nx-tools/nx-container:build",
      "options": {
        "engine": "docker",
        "buildArgs": {
          "NODE_ENV": "production"
        },
        "metadata": {
          "images": ["ghcr.io/ghost-brigade/harmony-service-role"],
          "load": true,
          "tags": [
            "type=raw,value=stable,enable={{is_default_branch}}",
            "type=raw,value=latest",
            "type=sha,prefix=sha-"
          ]
        },
        "push": true,
        "cache-from": ["type=gha"],
        "cache-to": ["type=gha,mode=max"]
      }
    }
  },
  "tags": []
}
