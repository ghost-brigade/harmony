{
  "name": "service-file",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/service-file/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/service-file",
        "main": "apps/service-file/src/main.ts",
        "tsConfig": "apps/service-file/tsconfig.app.json",
        "assets": ["apps/service-file/src/assets"],
        "isolatedConfig": true,
        "webpackConfig": "apps/service-file/webpack.config.js",
        "generatePackageJson": true
      },
      "configurations": {
        "development": {},
        "production": {}
      }
    },
    "serve": {
      "executor": "@nrwl/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "service-file:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "service-file:build:development"
        },
        "production": {
          "buildTarget": "service-file:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/service-file/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/service-file/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "container": {
      "dependsOn": ["build"],
      "executor": "@nx-tools/nx-container:build",
      "options": {
        "engine": "docker",
        "platforms": ["linux/amd64", "linux/arm64"],
        "buildArgs": {
          "NODE_ENV": "production"
        },
        "metadata": {
          "images": ["ghcr.io/ghost-brigade/harmony-service-file"],
          "load": true,
          "tags": [
            "type=raw,value=stable,enable={{is_default_branch}}",
            "type=raw,value=latest",
            "type=sha,prefix=sha-"
          ]
        },
        "push": true,
        "cache-from": ["type=gha"],
        "cache-to": ["type=gha,mode=max"]
      }
    }
  },
  "tags": []
}
